<section>

    <ul class='breadcrumb'>

        <li><a href='./'>Home</a> <span class='divider'>/</span></li>
        <li><a href='./#/{{instanceId}}'>{{instanceId}}</a> <span class='divider'>/</span></li>

        {{#if studentId}}
            <li><a href='./#/{{instanceId}}/students'>Students</a> <span class='divider'>/</span></li>
            <li><a href='./#/{{instanceId}}/students/{{studentId}}'>{{student.name}}</a> <span class='divider'>/</span></li>
        {{/if}}

        <li><a href='./#/{{instanceId}}/{{#if studentId}}students/{{studentId}}/{{/if}}courses'>Courses</a> <span class='divider'>/</span></li>
        <li><a href='./#/{{instanceId}}/{{#if studentId}}students/{{studentId}}/{{/if}}courses/{{courseId}}'>{{course.name}}</a> <span class='divider'>/</span></li>
        <li class='active'>Exercises</li>

    </ul>

    <h2>
        {{#if studentId}} {{student.name}} — {{/if}} {{course.name}} — Exercises ({{exercises.length}})

        {{> search}}
    </h2>

    <table class='table table-hover'>

        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
        </thead>

        <tbody>

            {{#exercises}}

                <tr>

                    <td class='index'>{{index @index}}</td>

                    {{#if ../studentId}}

                        <td class='link'><a href='./#/{{../../instanceId}}/students/{{../../studentId}}/courses/{{../../courseId}}/exercises/{{id}}/snapshots'>{{name}}</a></td>

                    {{else}}

                        <td class='link'><a href='./#/{{../../instanceId}}/courses/{{../../courseId}}/exercises/{{id}}/students'>{{name}}</a></td>

                    {{/if}}

                </tr>

            {{/exercises}}

        </tbody>

    </table>

</section>
